{
    "name": "gaming-engine/string-tools",
    "description": "String Helper libraries",
    "keywords": [
        "gaming-engine",
        "string"
    ],
    "homepage": "https://github.com/gaming-engine/dictionary",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Andrew Judd",
            "email": "awjudd@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "GamingEngine\\StringTools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GamingEngine\\StringTools\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
